<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.demo.app.MainActivity">


    <Button
        android:id="@+id/btn_nested_scroll"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:text="nested scroll" />

    <Button
        android:id="@+id/btn_recycler_view"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:text="recycler view" />


    <Button
        android:id="@+id/btn_second_floor"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:text="second floor" />

    <Button
        android:id="@+id/btn_coordinator_child"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:text="coordinator's child" />

    <Button
        android:id="@+id/btn_coordinator_parent"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:text="coordinator's parent" />


    <Button
        android:id="@+id/btn_scroll_view"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:text="scroll view" />

    <Button
        android:id="@+id/btn_list_view"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:text="list view" />

    <Button
        android:id="@+id/btn_web_view"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:text="web view" />

</LinearLayout>